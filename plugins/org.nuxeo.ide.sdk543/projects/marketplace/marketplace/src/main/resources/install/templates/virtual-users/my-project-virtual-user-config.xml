<component name="${parentGroupId}.virtual.user.contribution">

<require>org.nuxeo.ecm.platform.usermanager.UserManagerImpl</require>

<extension target="org.nuxeo.ecm.platform.usermanager.UserService" point="userManager">
  <userManager>
    <users>
      <virtualUser id="${r"${nuxeo.default.administrator.login}"}" searchable="false">
        <password>${r"${nuxeo.default.administrator.password}"}</password>
        <property name="firstName">My Custom</property>
        <property name="lastName">Administrator</property>
        <group>${r"${nuxeo.default.administrator.group}"}</group>
      </virtualUser>
      <!--virtualUser id="MyCustomMember" searchable="false">
        <password>12345678</password>
        <property name="firstName">My Custom</property>
        <property name="lastName">Member</property>
        <group>members</group>
      </virtualUser--> 
    </users>
  </userManager>
</extension>

</component>
