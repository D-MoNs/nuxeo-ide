<?xml version="1.0" encoding="UTF-8"?>
<Module>
  <ModulePrefs title="${gadgetTitle}" description="${gadgetDescription}"
    author="${user}" author_email="${userEmail}" height="200">
    <Require feature="setprefs" />
    <Require feature="dynamic-height" />
    <Require feature="settitle" />
<#noparse>
    <#include "dynamic-translations.ftl"/>
    <#include "default-oauth-prefs.ftl"/>
  </ModulePrefs>
  <#include "context-prefs.ftl"/>
</#noparse>
  <Content type="html">
<![CDATA[
<html>
  <head>

  <link rel="stylesheet" type="text/css" href="<#noparse>${specDirectoryUrl}</#noparse>gadget-common.css"/>
  <link rel="stylesheet" type="text/css" href="<#noparse>${specDirectoryUrl}</#noparse>documentlists.css"/>
  <link rel="stylesheet" type="text/css" href="<#noparse>${specDirectoryUrl}</#noparse>${gadgetName}.css"/>

  <!-- insert JS Context -->
  <#noparse>${jsContext}</#noparse>

  <script src="<#noparse>${specDirectoryUrl}</#noparse>default-automation-request.js"></script>
  <script src="<#noparse>${specDirectoryUrl}</#noparse>context-management.js"></script>
  <script src="<#noparse>${specDirectoryUrl}</#noparse>default-documentlist-display.js"></script>
  <script src="<#noparse>${clientSideBaseUrl}</#noparse>nxthemes-lib/jquery.js"></script>
  <script src="<#noparse>${specDirectoryUrl}</#noparse>${gadgetName}.js"></script>

  </head>
<#noparse>
    <body>
   	<div class="tools">
		<#include "context-chooser-ui.ftl"/>
   	</div>
	<div id="content">
		<#include "default-documentlist-layout.ftl"/>
     	<#include "default-request-controls.ftl"/>
   	</div>
    </body>
</#noparse>
</html>
]]>
  </Content>
</Module>
