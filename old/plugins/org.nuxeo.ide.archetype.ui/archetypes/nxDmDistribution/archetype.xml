<?xml version="1.0"?>

<archetype>
  <vars>
    <var label="Artifact Id" name="artifactId" default="nuxeo-distribution-sample"
      prompt="true" />
    <var label="Maven Parent Version" name="parentVersion" default="5.3.1-SNAPSHOT"
      prompt="true" />
    <var label="Maven Parent Archifact Id" name="parentArtifactId"
      default="nuxeo-distribution" prompt="true" />
    <var label="Maven Parent Group Id" name="parentGroupId" default="group"
      prompt="true" />
    <var label="Custom project Archifact Id" name="customModuleArtifactId"
      default="sample-project" prompt="true" />
    <var label="Custom project Group Id" name="customModuleGroupId"
      default="sample-group" prompt="true" />

  </vars>
  <resources>
    <template src="pom.xml" />
    <template src="build.xml" />
  </resources>
</archetype>

