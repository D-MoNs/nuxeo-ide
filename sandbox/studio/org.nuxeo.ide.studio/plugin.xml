<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Studio"
            id="org.nuxeo.ide.studio.views">
      </category>
      <view
            name="Studio Browser"
            icon="icons/sample.gif"
            category="org.nuxeo.ide.studio.views"
            class="org.nuxeo.ide.studio.views.StudioBrowserView"
            id="org.nuxeo.ide.studio.views.views.StudioBrowserView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="org.nuxeo.ide.studio.views.views.StudioBrowserView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
