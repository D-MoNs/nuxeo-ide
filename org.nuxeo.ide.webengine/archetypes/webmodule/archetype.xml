<?xml version="1.0"?>

<archetype>
  <vars>
    <var label="Group Id" name="groupId" default="org.sample" prompt="true" />
    <var label="Artifact Id" name="artifactId" default="sample" prompt="true" /> 
    <var label="Version" name="version" default="1.0-SNAPSHOT" prompt="true" /> 
    <var label="Module Id" name="moduleId" default="${artifactId}" prompt="true" />
    <var label="Package" name="package" default="${groupId}" prompt="true" />
  </vars>
  <resources>
    <template src="src/main/java/package/Main.java" />
    <template src="src/main/resources/META-INF/MANIFEST.MF" />
    <template src="src/main/resources/OSGI-INF/deployment-fragment.xml" />
    <template src="src/main/resources/module.xml" />
    <template src="src/main/resources/i18n/messages_en.properties" />    
    <template src="pom.xml" />
    <package src="src/main/java/package" target="src/main/java/${package}" />
    <directory src="src/main/resources/skin/views/moduleId" target="src/main/resources/skin/views/${moduleId}" />
  </resources>
</archetype>

